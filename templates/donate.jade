extends theme

block title
	title= __('donate.pagetitle') + ' | ToonStore.net'
	meta(name='description', content='#{__("donate.meta_description")}')

block article_header

	h1= __('donate.pagetitle')

block article_body

	p= __('donate.plea')

	h2= __('donate.paypal.header')

	p= __('donate.paypal.p1')

	.imgcontainer
		form(action="https://www.paypal.com/cgi-bin/webscr", method="post", target="_top")
			input(type="hidden", name="cmd", value="_s-xclick")
			table
				tr: td
					input(type="hidden", name="on0", value="Choose your amount")
					| Choose your amount
				tr: td: select(name="os0")
					option(value="Feet In The Water") Feet In The Water $1 USD
					option(value="Up To Your Waist") Up To Your Waist $5 USD
					option(value="Chest-Deep") Chest-Deep $10 USD
					option(value="Submerged") Submerged $20 USD

				tr: td
					input(type="hidden", name="on1", value="Comments")
					| Comments
				tr: td: input(type="text", name="os1", maxlength="200")

			input(type="hidden", name="currency_code", value="USD")

			- var payload = "-----BEGIN PKCS7----------END PKCS7-----";

			input(type="hidden", name="encrypted", value=payload)
			input(type="image", src="https://www.paypalobjects.com/en_US/i/btn/btn_paynow_LG.gif", border="0", name="submit", alt="PayPal - The safer, easier way to pay online!")
			img(alt="", border="0", src="https://www.paypalobjects.com/en_US/i/scr/pixel.gif", width="1", height="1")


	h2= __('donate.how.header')

	p= __('donate.how.p1')

	.imgcontainer
		.iframecontainer(style='width:560px;')
			iframe(width="560", height="315", src="//www.youtube.com/embed/Gc2en3nHxA4", frameborder="0", allowfullscreen)

	p= __('donate.how.p2')

	p= __('donate.how.p3.f1')
		a(href='//circle.com') Circle.com
		= __('donate.how.p3.f2')
		a(href='//coinbase.com') Coinbase.com
		= __('donate.how.p3.f3')


	h2= __('donate.where.header')

	p= __('donate.where.p1')

	div(style='display:flex; flex-direction:column; align-items:center;')
		if logged_user
			img(src='/site/donate/donation_qr.png?user=#{logged_user}')
			a(href='bitcoin:#{donation_address}?message=Thanks%20from%20#{logged_user}', style='font-family:monospace;')= donation_address
		else
			img(src='/site/donate/donation_qr.png')
			a(href='bitcoin:#{donation_address}', style='font-family:monospace;')= donation_address

	p= __('donate.where.p2')
